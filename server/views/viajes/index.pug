extends ../layout/index
block contenido
    main.container.pt-5
        h1.text-center.mb-5 #{pagina}
        .row.proximos-viajes
            each viaje in viajes
                .col-md-6.col-lg-4.mb-4
                    .card
                        img(src=`img/destinos_${viaje.imagen}.jpg`, alt="img" class="img-fluid")
                        .card-body
                            h2= viaje.titulo
                            p
                                img(src="img/icono_calendario.svg", alt="icon-calendario" width="23px")
                                |       #{viaje.fecha_ida} - #{viaje.fecha_ida}
                            p
                                img(src="img/icono_precios.svg", alt="icon-calendario" width="23px")
                                |       #{viaje.precio}$        
                            p #{viaje.descripcion.substr(0,130)}
                            a(href=`viajes/${viaje.id}` class="btn btn-success btn-block") Ver mas...