extends ../layout/index
block contenido
    main.container.pt-5
        .row
            .col-md-5
                img(src=`/img/destinos_${viaje.imagen}_ln.jpg`, alt="img nosotros" class="img-fluid")
            .col-md-7
                h1 #{viaje.titulo}
                img(src="/img/icono_calendario.svg", alt="calendario" width="23px")
                |  Fecha de ida #{viaje.fecha_ida} - Fecha de vuelta #{viaje.fecha_ida}
                p #{viaje.disponibles} cupos disponibles
                img(src="/img/icono_precio.svg", alt="precio" width="18px")
                |  #{viaje.precio}$
                p #{viaje.descripcion.substr(0,800)}